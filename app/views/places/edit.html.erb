<%= simple_form_for(@place, html:{class: "row mt-5"}) do |f|%>
  <%= f.input :name, wrapper_html: {class: "col-6"} %>
  <%= f.input :tax , wrapper_html: {class: "col-6"}%>
  <%= f.input :control, wrapper_html: {class: "col-6"}%>
  <%= f.input :reputation,wrapper_html: {class: "col-6"} %>
  <%= f.input :regime ,wrapper_html: {class: "col-6"}%>
  <%= f.input :position ,wrapper_html: {class: "col-6"}%>
  <%= f.input :continent,wrapper_html: {class: "col-6"} %>
  <%= f.input :min_income,wrapper_html: {class: "col-6"} %>
  <%= f.input :description,wrapper_html: {class: "col-6"} %>
  <%= f.input :thumbnail, as: :file,wrapper_html: {class: "col-6"} %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } ,wrapper_html: {class: "col-6"}%>
  <%= f.submit  %>
<% end %>
<%= link_to 'Go Back', user_path(current_user) %>
