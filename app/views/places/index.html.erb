<!----- LIST PLACES ---->

<div class="results">
<h2>Top tax haven to save your money.</h2>
<div class="cards row">
  <div class="d-flex justify-content-center align-items-center flex-wrap">
    <%  if @places.class == String %>
      <h2><%=  @places %></h2>
    <% else %>
      <% @places.each do |place| %>
        <%= link_to place_path(place) do %>
          <div class="card d-flex" style = "background-image: linear-gradient(to bottom, rgba(246, 244,230, 0.2), rgba(253, 219, 58, 0.2)),url(<%= cl_image_path place.thumbnail.key, height: 300, width: 400, crop: :fill if place.thumbnail.attached? %>)">
              <h3><%= place.name %></h3>
              <div class="description">
                <p>Tax level: 💸💸💸💸💸</p>
                <p>Reputation: 👍👍👍👍👍</p>
                <p>Control: 😭😭😭😭😭</p>
                <p>Regime 👑</p>
              </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
    </div>
    </div>
  </div>
</div>

