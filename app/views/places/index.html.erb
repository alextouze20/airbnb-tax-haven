<%= link_to 'User Page', user_path(current_user) %>
<%= form_tag places_path, method: :get do %>
  <div class="row d-flex align-items-center justify-content-center research-form">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control col-4",
      placeholder: "What's your income, peasant?"
    %>
  <%= submit_tag "Search", class: "btn btn-primary col-3 searchbtn" %>
  <%= link_to "Add a new place", new_place_path%>
  </div>
<% end %>
<div class="container text-center" >

<h1>Typical places to save your money</h1>
<div class="cards row">
  <div class="d-flex justify-content-center align-items-center flex-wrap">
    <%  if @places.class == String %>
      <h2><%=  @places %></h2>
    <% else %>
      <% @places.each do |place| %>
        <%= link_to place_path(place) do %>
          <div class="card d-flex" style = "background-image: linear-gradient(to bottom, rgba(246, 244,230, 0.2), rgba(253, 219, 58, 0.2)),url(<%= cl_image_path place.thumbnail.key, height: 300, width: 400, crop: :fill if place.thumbnail.attached? %>)">
              <h3><%= place.name %></h3>
              <div class="description">
                <%= place.description %>
                <p>Tax level: 💸💸💸💸💸</p>
                <p>Reputation: 👍👍👍👍👍</p>
                <p>Control: 😭😭😭😭😭</p>
                <p>Regime 👑</p>
                <h4>Owned by:</h4>
                <%= place.user.name %> <br>
                <%= place.user.bio %> <br>
                <%= place.user.email %>
              </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
</div>


