<%= form_tag places_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "What's your income, peasant?"
  %>
<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<div class="container" >

<h1>Voici quelques Paradis Fiscaux</h1>
<div class="cards">
  <%  if @places.class == String %>
    <h2><%=  @places %></h2>
  <%  else %>
  <% @places.each do |place| %>
  <div class="card">
     <div class="link"><%= link_to place.name, place_path(place.id) %></div>
     <%= cl_image_tag place.thumbnail.key, height: 300, width: 400, crop: :fill if place.thumbnail.attached? %>
  </div>
  <% end %>
  <% end %>
</div>
</div>

<p><%= link_to "Add a new place", new_place_path %></p>
<p> User id : <%= current_user[:id] %></p>
