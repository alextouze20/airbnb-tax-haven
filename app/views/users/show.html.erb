<h1 class="mt-5"> User info</h1>
<br>
<br>
<div>
  <div>
    Name : <%= @user.name %> <%= cl_image_tag @user.photo.key, height: 100, width: 100, crop: :fill if @user.photo.attached? %>
  </div>
  <div>
  Money : <%= @user.money %>
  </div>
  <div>
    Company : <%= @user.compagny %>
  </div>
  <div>
    Bio : <%= @user.bio %>
  </div>
  <div>
  email : <%= @user.email %>
  </div>
    <% if policy(@user).edit? %>
    <div>
      <%= link_to "Edit User Info", edit_user_path(current_user.id), class: "btn btn-danger" %>
      <% end %>
    </div>
</div>


<h1 class="text-left">Places created by user</h1>
  <% @user.places.each do |place| %>
    <%= link_to place.name, place_path(place.id) %>
    <%= cl_image_tag place.thumbnail.key, height: 300, width: 400, crop: :fill if place.thumbnail.attached? %>


    <% if @user == current_user %>
    <%= link_to "Edit this place", edit_place_path(place.id) %>
    <%= link_to "🗑️",
      place_path(place.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <% end %>

  <% end %>
  <% if @user == current_user %>
  <p><%= link_to "Add a new place", new_place_path, class: "btn btn-danger"%></p>

<% end %>



<h2>Citizenships of user</h2>
<ul>
  <% @user.citizenships.each do |citizenship| %>
    <li><%= citizenship.user.name %> - <%= citizenship.place.name %>
  <%= link_to "🗑️",
      place_citizenship_path(citizenship.place,citizenship),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Go back', places_path, class: "btn btn-danger" %>
