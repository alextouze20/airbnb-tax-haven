<h1>User info</h1>
<%= @user.name %>
<%= @user.money %>
<%= @user.password %>
<%= @user.compagny %>

<h1>Places created by user</h1>
<% if @user == current_user %>
  <% @user.places.each do |place| %>
    <%= link_to place.name, place_path(place.id) %>
    <%= cl_image_tag place.thumbnail.key, height: 300, width: 400, crop: :fill if place.thumbnail.attached? %>
    <%= link_to "Edit this place", edit_place_path(place.id) %>
    <%= link_to "🗑️",
      place_path(place.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
<% end %>

<p><%= link_to "Add a new place", new_place_path %></p>

<h2>Citizenships of user</h2>
<ul>
  <% @user.citizenships.each do |citizenship| %>
    <li><%= citizenship.user.name %> - <%= citizenship.place.name %>
  <%= link_to "🗑️",
      place_citizenship_path(citizenship.place,citizenship),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Go back', places_path %>
